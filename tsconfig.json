{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },

    "types": ["node"]
  },

  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
, "dev/vite.ts"  ],

  "exclude": [
    "node_modules",
    "dist",
    "client",
    "vite.config.ts",
    "dev/vite.ts"
  ]
}
